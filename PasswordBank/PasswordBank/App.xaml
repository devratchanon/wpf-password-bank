<Application x:Class="PasswordBank.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             
             xmlns:view="clr-namespace:PasswordBank.Views"
             xmlns:vm="clr-namespace:PasswordBank.ViewModels"
             
             xmlns:local="clr-namespace:PasswordBank"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
         <DataTemplate DataType="{x:Type vm:LoginViewModel}">
             <view:LoginView></view:LoginView>
         </DataTemplate>
        
        <DataTemplate DataType="{x:Type vm:VaultViewModel}">
            <view:VaultView></view:VaultView>
        </DataTemplate>
    </Application.Resources>
</Application>
